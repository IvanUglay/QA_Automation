    {
      "name": "9 - GET /jokes/:id  (dynamic id via prerequest)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/jokes/{{test_id}}",
        "description": "Fetch a joke by id. prerequest script chooses a random id."
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.sendRequest({",
              "  url: pm.variables.replaceIn('{{baseUrl}}/random_joke'),",
              "  method: 'GET'",
              "}, function (err, res) {",
              "  if (err) { console.log('pre-request error', err); }",
              "  else {",
              "    var j = res.json();",
              "    pm.variables.set('test_id', j.id);",
              "  }",
              "});"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
              "pm.test('Returned id equals requested id', function () {",
              "  var json = pm.response.json();",
              "  pm.expect(json.id).to.eql(parseInt(pm.variables.get('test_id')));",
              "});"
            ]
          }
        }
      ]
    },
